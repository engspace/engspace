{
    "name": "engspace",
    "version": "0.1.0",
    "description": "Engineering Space - PLM solution",
    "repository": "https://github.com/engspace/engspace",
    "author": "Remi Thebault <remi.thebault@gmail.com>",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lint": "lerna run lint --parallel",
        "lint:fix": "lerna run lint:fix --parallel",
        "test": "lerna run test",
        "test:cov": "lerna run test:cov --stream ",
        "cov:merge": "node ./merge_nyc_reports.js && nyc report",
        "coveralls": "nyc report --reporter=text-lcov | coveralls",
        "build": "lerna run build",
        "client:build": "lerna run build --scope @engspace/client-app --include-dependencies --stream",
        "demo:build": "lerna run build --scope @engspace/demo-server --include-dependencies --stream",
        "demo:serve": "lerna run serve --scope=@engspace/demo-server --stream",
        "server:build": "lerna run build --scope=@engspace/server-app --include-dependencies --stream",
        "server:serve": "lerna run serve --scope=@engspace/server-app --stream",
        "clean": "lerna run clean --parallel"
    },
    "nyc": {
        "extension": [
            ".js",
            ".ts"
        ],
        "reporter": [
            "text"
        ]
    },
    "devDependencies": {
        "coveralls": "^3.0.9",
        "lerna": "^3.18.4",
        "nyc": "^14.1.1",
        "prettier": "^1.19.1"
    }
}
